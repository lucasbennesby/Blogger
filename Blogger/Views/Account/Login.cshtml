@model Blogger.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <input id="visualizarSenha" type="checkbox" /> Mostrar Senha
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Logar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    Não tem conta? <a asp-action="Cadastrar">Criar conta</a>
</div>

<script src="~/js/mostrarSenha.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var type = '@TempData["NotificationType"]';
        var message = '@TempData["NotificationMessage"]';

        if (type && message) {
            new Noty({
                type: type, 
                text: message,
                timeout: 3000,
                progressBar: true,
                layout: 'topLeft'
            }).show();
        }
    });
</script>

